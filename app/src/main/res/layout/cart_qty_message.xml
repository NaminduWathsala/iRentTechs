<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/message_border"
    android:paddingBottom="40dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/success_View"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/product" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="40dp"
        android:gravity="center"

        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/success_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="Quantity"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:gravity="center"
            android:foregroundGravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/minusButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/minus" />

            <EditText
                android:id="@+id/numberPicker"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:text="0"
                android:textSize="18sp" />

            <android.widget.Button
                android:id="@+id/plusButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ad"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/cart_cancel_button"
            android:layout_width="wrap_content"
            android:background="@drawable/login_btn"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#717171"
            android:fontFamily="@font/quicksand_medium"
            android:text="Cancel"
            android:paddingHorizontal="30dp"
            android:elevation="10dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <android.widget.Button
            android:id="@+id/cart_product_add_to_card"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/login_btn"
            android:backgroundTint="@color/Prime2"
            android:drawableEnd="@drawable/cart"
            android:drawableTint="@color/white"
            android:elevation="10dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:paddingHorizontal="50dp"
            android:text="Add to"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>