<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3B5998" /> <!-- Facebook Blue color -->
            <corners android:radius="50dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#666666" /> <!-- Shadow color -->
            <corners android:radius="50dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
</layer-list>